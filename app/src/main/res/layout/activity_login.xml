<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <include layout="@layout/actionbar"
        android:id="@+id/actionbarlogin"/>



    <TextView
        android:id="@+id/txtinfolg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Account"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/actionbarlogin"
        />

    <TextView
        android:id="@+id/txtmaillg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_below="@+id/txtinfolg"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"/>
    <EditText
        android:id="@+id/txtemaillg"
        android:maxLength="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtmaillg"
        android:hint="@string/email"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="textEmailAddress"


        />
    <TextView
        android:id="@+id/txtpasslg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_below="@+id/txtemaillg"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"/>
    <EditText
        android:id="@+id/paswordlg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtpasslg"
        android:hint="@string/password"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="textPassword"
        android:maxLength="10"

        />

    <Button
        android:id="@+id/btnsignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paswordlg"
        android:layout_marginTop="45dp"
        android:text="Sign In"
        android:background="@color/bar"
        />



</RelativeLayout>